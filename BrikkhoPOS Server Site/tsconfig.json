{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2023",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "lib/**/*", "generated/**/*"],
    "exclude": ["node_modules", "dist"]
}
