generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum

enum Role {
  USER
  ADMIN
}

enum ActiveStatus {
  ACTIVE
  INACTIVE
}

// User Modles

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  password  String
  name      String?
  phone     String?
  role      Role         @default(USER)
  status    ActiveStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

// workers models

model Worker {
  id             String  @id @default(uuid())
  name           String
  dailySalary    Float
  address        String?
  profilePicture String?
  age            Int?

  phoneNumber String?
  email       String?      @unique
  status      ActiveStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
